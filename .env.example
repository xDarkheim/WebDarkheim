# =============================================================================
# DARKHEIM.NET ENVIRONMENT CONFIGURATION
# =============================================================================
# Скопируйте этот файл в .env и настройте значения для вашего окружения

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_NAME=webengine_darkheim
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=debug
APP_TIMEZONE=UTC

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=1800
FORCE_HTTPS=false

# =============================================================================
# SITE SETTINGS (можут быть переопределены в админ-панели)
# =============================================================================
SITE_NAME=Darkheim Development Studio
SITE_URL=https://darkheim.net

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# =============================================================================
# EMAIL SETTINGS (управляются через админ-панель)
# =============================================================================
# Эти настройки теперь управляются через базу данных
# и админ-панель по адресу /index.php?page=site_settings
